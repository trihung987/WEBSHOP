    --light: #F9F9F9;
    --blue: #3C91E6;
    --light-blue: #CFE8FF;
    --grey: #eee;
    --dark-grey: #AAAAAA;
    --dark: #342E27;
    --red: #DB504A;
    --yellow: #FFCE26;
    --light-yellow: #FFF2C6
